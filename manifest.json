{
  "manifest_version": 3,
  "name": "Canary",
  "version": "0.1.0",
  "description": "Warns you about potential misinformation using text classification models",
  "icons": {
    "16": "assets/icon.png",
    "48": "assets/icon.png",
    "128": "assets/icon.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["src/contentScript.js", "src/popup/popup.js"],
      "css": ["styles.css"]
    }
  ],
  "background": {
    "service_worker": "src/contextMenu.js"
  },
  "action": {
    "default_icon": "assets/icon.png",
    "default_popup": "src/popup/popup.html"
  },
  "permissions": ["activeTab", "storage", "contextMenus"]
}
